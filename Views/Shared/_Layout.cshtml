<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QAD User Review</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@{
    string menuTextColor = "text-white";
}

<body>
    <div class="header-gradient">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark">
                <div class="container-fluid px-3 px-lg-5">
                    <a class="navbar-brand @menuTextColor" asp-controller="Home" asp-action="Index">IT User Portal</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link @menuTextColor" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item HomePageloader">
                                <a class="nav-link @menuTextColor" asp-controller="ReviewList" asp-action="Index">QAD User Review</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @menuTextColor" asp-controller="ItDocs" asp-action="Index">IT Policies &amp; Procedures</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @menuTextColor" asp-controller="ITQuality" asp-action="Index">IT Quality &amp; Compliance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @menuTextColor" asp-controller="ServiceDesk" asp-action="Index">Service Desk+</a>
                            </li>
                            @{
                                var permService = Context.RequestServices.GetService<QAD_User_Review.Services.IPermissionService>();
                                bool showSettings = false;
                                if (Context.User.Identity?.IsAuthenticated == true && permService != null)
                                {
                                    var parts = Context.User.Identity.Name?.ToLower().Split('\\');
                                    var adUser = parts != null && parts.Length > 1 ? parts[1] : parts?[0] ?? "";
                                    var role = await permService.GetUserRoleCodeAsync(adUser);
                                    showSettings = role == "SuperAdmin" || role == "Admin";
                                }
                            }
                            @if (showSettings)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-controller="Admin" asp-action="Index">Settings</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div class="main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Success Dialog -->
    <div id="myModalSuccess" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="MyModalSuccessAlertBody" class="modal-body alert alert-success mb-0"></div>
            </div>
        </div>
    </div>

    <!-- Menu Details Modal -->
    <div class="modal" tabindex="-1" role="dialog" id="form-modal-menu">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div class="modal modal-backdrop" id="loader">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="spinner-border text-primary"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Home Page Loading Spinner -->
    <div class="modal modal-backdrop" id="HomePageloader">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="spinner-border text-primary"></div>
                    <div class="row">
                        <strong>Loading...</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts: jQuery MUST load before site.js -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }
        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg) openSuccessModal(msg);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
